{
  "info": {
    "name": "backend_management API Collection",
    "_postman_id": "backend-management",
    "description": "Postman collection for backend_management project",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/signup",
          "host": ["{{base_url}}"],
          "path": ["auth", "signup"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Devashish\",\n  \"email\": \"devashish@example.com\",\n  \"password\": \"Password@123\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"devashish@example.com\",\n  \"password\": \"Password@123\"\n}"
        }
      }
    },
    {
      "name": "Get Dashboard",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/dashboard",
          "host": ["{{base_url}}"],
          "path": ["dashboard"]
        }
      }
    },
    {
      "name": "Create Lead",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/leads",
          "host": ["{{base_url}}"],
          "path": ["leads"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Lead\",\n  \"email\": \"lead@example.com\",\n  \"phone\": \"9999999999\"\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}
